{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "customManagers:dockerfileVersions"],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": ["dependencies", "no-stale"],
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "packageRules": [
    {
      "groupName": "Docker images",
      "matchDatasources": ["docker"]
    },
    {
      "groupName": "Docker images",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "GitHub Releases",
      "matchDatasources": ["github-releases"]
    },
    {
      "groupName": "GitHub Releases",
      "matchDatasources": ["github-releases"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "Repology",
      "matchDatasources": ["repology"],
      "automerge": true
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "Gradle dependencies",
      "matchManagers": ["gradle", "gradle-wrapper"]
    },
    {
      "groupName": "Gradle dependencies",
      "matchManagers": ["gradle", "gradle-wrapper"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "Cargo dependencies",
      "matchManagers": ["cargo"]
    },
    {
      "groupName": "Cargo dependencies",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Major updates require explicit human approval",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "dependencyDashboardApproval": true,
      "labels": ["dependencies", "no-stale", "major"]
    }
  ]
}
